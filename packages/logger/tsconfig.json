{
  "include": ["src", "env.ts"],
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noImplicitOverride": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "outDir": "dist",
    "declaration": true,
    "composite": true,
    "sourceMap": true,
    "declarationMap": true,
    "lib": ["ESNext"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
