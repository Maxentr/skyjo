{
  "include": ["src", "env.schema.ts", "env.d.ts", "drizzle.config.ts"],
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "module": "NodeNext",
    "lib": ["ES2023"],
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext"
  }
}
