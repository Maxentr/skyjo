{
  "include": ["validations", "types", "constants.ts"],
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "baseUrl": "./",
    "outDir": "./dist",
    "declaration": true,
    "composite": true,
    "sourceMap": true,
    "declarationMap": true,
    "lib": ["ESNext"]
  }
}
