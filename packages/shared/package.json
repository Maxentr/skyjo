{
  "name": "@skyjo/shared",
  "description": "Shared types and validations between the server and the client",
  "version": "1.32.0",
  "type": "module",
  "types": "./dist/*.d.ts",
  "exports": {
    "./validations/*": "./dist/validations/*.js",
    "./types/*": "./dist/types/*.d.ts",
    "./constants": "./dist/constants.js"
  },
  "typesVersions": {
    "*": {
      "*": ["./dist/*"]
    }
  },
  "scripts": {
    "build": "tsc",
    "biome:check": "pnpm biome check --write ."
  },
  "dependencies": {
    "zod": "^3.23.8",
    "@skyjo/core": "workspace:*",
    "@skyjo/error": "workspace:*"
  },
  "devDependencies": {
    "@skyjo/ts-config": "workspace:*",
    "typescript": "^5.6.3"
  }
}
