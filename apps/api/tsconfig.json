{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noImplicitOverride": true,
    "module": "NodeNext",
    "outDir": "dist",
    "lib": ["ESNext"],
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"],
      "@env": ["./env.ts"]
    }
  }
}
