{
  "name": "@skyjo/api",
  "description": "Skyjo API",
  "version": "1.33.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts --env-file=.env",
    "build": "tsc --project tsconfig.prod.json && pnpx tsc-alias --project tsconfig.prod.json",
    "prod": "tsx dist/src/index.js",
    "biome:check": "pnpm biome check --write .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui --coverage.enabled=true"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.5",
    "@hono/zod-validator": "^0.4.1",
    "@skyjo/cache": "workspace:*",
    "@skyjo/core": "workspace:*",
    "@skyjo/error": "workspace:*",
    "@skyjo/logger": "workspace:*",
    "@skyjo/shared": "workspace:*",
    "dayjs": "^1.11.13",
    "hono": "^4.6.9",
    "nodemailer": "^6.9.16",
    "socket.io": "^4.8.1",
    "socket.io-msgpack-parser": "^3.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/nodemailer": "^6.4.16",
    "@vitest/coverage-istanbul": "^2.1.4",
    "@vitest/ui": "^2.1.4",
    "socket.io-client": "^4.8.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vite-tsconfig-paths": "^5.1.0",
    "vitest": "^2.1.4"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^6.0.5"
  }
}
